// .devcontainer/devcontainer.json

{
    "name": "Python Codespace",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
  
    "extensions": [
        "ms-python.python"
        // Other extensions as needed
    ],
  
    "postCreateCommand": "bash .devcontainer/setup-docker.sh && pip install -r /workspace/codespaces-blank/requirements.txt",
  
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
  
    "forwardPorts": [3000, 5000], // Adjust ports as per your application's needs
  
    "runArgs": ["--privileged"],
    "remoteUser": "codespace"
}
